.LoginPage {
    width: 100%;
    position: absolute;
    bottom: 0px;
    min-width: 1366px;
    height: 450px;
}

.LoginPage-wrap {
    width: 39%;
    height: 457px;
    background: #fff;
    margin: 129px auto;
    padding: 26px 40px 30px 40px;
    border-radius: 5px;
}

.LoginPagefooter.home-footer {
    margin-top: 263px;
}

.LoginPage-wrap_top {
    overflow: hidden;
    border-bottom: 1px solid #BFBFBF;
}

.LoginPage-wrap_top h4 {
    float: left;
    font-size: 26px;
    line-height: 51px;
}

.LoginPage-wrap_top h4 span {
    font-size: 16px;
    color: #1779CE;
    margin-left: 5px;
}

.LoginPage-wrap_top a {
    float: right;
    text-decoration: none;
    margin-top: 10px;
    font-size: 18px;
    line-height: 51px;
}

.LoginPage-wrap_top a i {
    vertical-align: bottom;
    margin-right: 5px;
    font-size: 18px;
}

.LoginPage-wrap_bottom {
    overflow: hidden;
    padding-top: 40px;
}

.LoginPage-wrap_bottom-left {
    float: left;
    width: 38%;
    text-align: center;
}

.LoginPage-wrap_bottom-left img {
    width: 100%;
}

.LoginPage-wrap_bottom-right {
    float: left;
    width: 62%;
}

.LoginPage-wrap_bottom-right li {
    overflow: hidden;
    margin-bottom: 22px;
    font-size: 18px;
}

.LoginPage-wrap_bottom-right li .btn {
    height: 50px;
    font-size: 20px;
}

.LoginPage-wrap_bottom-right li span {
    float: left;
    width: 15%;
    font-size: 15px;
    font-size: 18px;
    text-align: justify;
    text-align-last: justify;
    margin-top: 10px;
    margin-right: 10px;
}

.LoginPage-wrap_bottom-right ul {
    margin-left: 20px;
}

.LoginPage-wrap_bottom-right li input.form-control {
    width: 80%;
    float: left;
    height: 44px;
    line-height: 44px;
}

.LoginPage-wrap_bottom-right li input[type="checkbox"] {
    width: 20px;
    height: 20px;
}

.LoginPage-wrap_bottom-right li input.form-control.code {
    width: 33%;
}

.LoginPage-wrap_bottom-right li .securityCode {
    width: 25%;
    height: 34px;
    float: left;
    margin-left: 10px;
}

.LoginPage-wrap_bottom-right li .changeone {
    text-decoration: none;
    cursor: pointer;
    margin-left: 10px;
    margin-top: 6px;
    float: left;
}

.LoginPage-wrap_bottom-right li label {
    font-weight: normal;
}

.remember {
    vertical-align: text-top;
}

.remember_right {
    float: right;
}

/*小屏适配*/
.smallScreen .LoginPage-wrap {
    width: 55%;
}

.smallScreen .LoginPage-wrap_bottom {
    padding-top: 25px;
}